{
  "name": "@xray/schema",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Shared schemas and types for Xray",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "schema:generate": "tsx src/scripts/generate-schema.ts"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "zod": "^4.2.0"
  }
}

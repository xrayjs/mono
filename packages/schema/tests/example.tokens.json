{
  "$schema": "../../../dtcg.schema.json",
  "colors": {
    "$type": "color",
    "$description": "Brand color palette",
    "primary": {
      "$value": {
        "colorSpace": "srgb",
        "components": [0.2, 0.4, 1]
      },
      "$description": "Primary brand color"
    },
    "secondary": {
      "$value": {
        "colorSpace": "oklch",
        "components": [0.7, 0.15, 280]
      }
    },
    "neutral": {
      "100": {
        "$value": {
          "colorSpace": "srgb",
          "components": [0.95, 0.95, 0.95]
        }
      },
      "500": {
        "$value": {
          "colorSpace": "srgb",
          "components": [0.5, 0.5, 0.5]
        }
      },
      "900": {
        "$value": {
          "colorSpace": "srgb",
          "components": [0.1, 0.1, 0.1]
        }
      }
    }
  },
  "spacing": {
    "$type": "dimension",
    "$description": "Spacing scale",
    "xs": {
      "$value": { "value": 4, "unit": "px" }
    },
    "sm": {
      "$value": { "value": 8, "unit": "px" }
    },
    "md": {
      "$value": { "value": 16, "unit": "px" }
    },
    "lg": {
      "$value": { "value": 24, "unit": "px" }
    },
    "xl": {
      "$value": { "value": 32, "unit": "px" }
    }
  },
  "fonts": {
    "$type": "fontFamily",
    "body": {
      "$value": ["Inter", "system-ui", "sans-serif"]
    },
    "heading": {
      "$value": ["Poppins", "sans-serif"]
    },
    "mono": {
      "$value": ["JetBrains Mono", "monospace"]
    }
  },
  "fontWeights": {
    "$type": "fontWeight",
    "normal": {
      "$value": 400
    },
    "medium": {
      "$value": 500
    },
    "bold": {
      "$value": 700
    }
  },
  "durations": {
    "$type": "duration",
    "fast": {
      "$value": { "value": 100, "unit": "ms" }
    },
    "normal": {
      "$value": { "value": 200, "unit": "ms" }
    },
    "slow": {
      "$value": { "value": 400, "unit": "ms" }
    }
  },
  "easings": {
    "$type": "cubicBezier",
    "easeIn": {
      "$value": [0.4, 0, 1, 1]
    },
    "easeOut": {
      "$value": [0, 0, 0.2, 1]
    },
    "easeInOut": {
      "$value": [0.4, 0, 0.2, 1]
    }
  },
  "typography": {
    "$type": "typography",
    "body": {
      "$value": {
        "fontFamily": "{fonts.body}",
        "fontSize": { "value": 1, "unit": "rem" },
        "fontWeight": "{fontWeights.normal}",
        "lineHeight": 1.5
      }
    },
    "heading1": {
      "$value": {
        "fontFamily": "{fonts.heading}",
        "fontSize": { "value": 2.5, "unit": "rem" },
        "fontWeight": "{fontWeights.bold}",
        "lineHeight": 1.2
      }
    }
  },
  "shadows": {
    "$type": "shadow",
    "sm": {
      "$value": {
        "color": {
          "colorSpace": "srgb",
          "components": [0, 0, 0],
          "alpha": 0.1
        },
        "offsetX": { "value": 0, "unit": "px" },
        "offsetY": { "value": 1, "unit": "px" },
        "blur": { "value": 2, "unit": "px" }
      }
    },
    "md": {
      "$value": [
        {
          "color": {
            "colorSpace": "srgb",
            "components": [0, 0, 0],
            "alpha": 0.1
          },
          "offsetX": { "value": 0, "unit": "px" },
          "offsetY": { "value": 2, "unit": "px" },
          "blur": { "value": 4, "unit": "px" }
        },
        {
          "color": {
            "colorSpace": "srgb",
            "components": [0, 0, 0],
            "alpha": 0.1
          },
          "offsetX": { "value": 0, "unit": "px" },
          "offsetY": { "value": 4, "unit": "px" },
          "blur": { "value": 8, "unit": "px" }
        }
      ]
    }
  },
  "borders": {
    "$type": "border",
    "default": {
      "$value": {
        "color": "{colors.neutral.500}",
        "width": { "value": 1, "unit": "px" },
        "style": "solid"
      }
    }
  },
  "transitions": {
    "$type": "transition",
    "default": {
      "$value": {
        "duration": "{durations.normal}",
        "timingFunction": "{easings.easeOut}"
      }
    }
  },
  "gradients": {
    "$type": "gradient",
    "primary": {
      "$value": [
        {
          "color": "{colors.primary}",
          "position": 0
        },
        {
          "color": "{colors.secondary}",
          "position": 1
        }
      ]
    }
  }
}

    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@xray/schema": "workspace:*",
    "solid-js": "catalog:"
  },
  "devDependencies": {
    "@vitest/ui": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-solid": "^2.10.2",
    "vitest": "catalog:"
  }
}

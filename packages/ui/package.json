{
  "name": "@xray/ui",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Shared UI components for Xray",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf dist",

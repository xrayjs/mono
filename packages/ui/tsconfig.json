{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "~~/*": ["../../*"],
      "@@/*": ["../../*"],
      "#shared/*": ["../../shared/*"],
      "assets/*": ["./src/assets/*"],
      "public/*": ["../../public/*"],
      "#.storybook/*": ["./.storybook/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts"
  ],
  "references": [{ "path": "../schema" }]
}
